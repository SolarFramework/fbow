def version

pipeline {
    agent {
        label "jenkins-slave-argo-qmake"
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        booleanParam(name: 'RELEASE',
            defaultValue: false,
            description: 'Create a Release')                
    }
    triggers { pollSCM('*/10 * * * *') }     
    stages {

        stage("Get Third Parties") {
             steps {
                 script {
                     BRANCH = BRANCH_NAME.replace('/','_')
                     version = sh (
                        script: "cat *.pro  | grep VERSION | head -1 | cut -d '=' -f 2",
                        returnStdout: true
                     )
                     version = version.replaceAll("[\r|\n]","")
                 }
                 withCredentials([string(credentialsId: 'artifactoryApiKey', variable: 'apiKey')]) {
                    installRemaken(params.RELEASE,BRANCH,apiKey)
                 }
             }
        }  

        stage("Build") {
            steps {
                withEnv(['REMAKEN_RULES_ROOT=/home/jenkins/.remaken/rules/']) {
                    sh "qmake fbow.pro"
                    sh "make"
                    sh "make install"
                }
            }
        }

        stage("Build Debug") {
            when {
                expression { params.RELEASE == true }
            }              
            steps {
                withEnv(['REMAKEN_RULES_ROOT=/home/jenkins/.remaken/rules/']) {
                    sh "qmake fbow.pro CONFIG+=debug"
                    sh "make"
                    sh "make install"
                }
            }
        }        

        stage("Generate artifacts") {
            steps {
                script {
                     prepareRelease("thirdParties","linux-gcc","fbowSolAR")
                }
            }
        }  

        stage("Release") {
            when {
                expression { params.RELEASE == true }
            }            
            steps {
                withCredentials([string(credentialsId: 'github-token', variable: 'token')]) {
                    release("binaries","fbowSolAR/${version}/linux","fbowSolAR Version ${version} for Linux","${WORKSPACE}/artifactory/x86_64_shared_release/fbowSolAR_${version}_x86_64_shared_release.zip ${WORKSPACE}/artifactory/x86_64_shared_debug/fbowSolAR_${version}_x86_64_shared_debug.zip",token);
                }
            }
        }        
    }

}
